@model dynamic

@{
    ViewBag.Title = "Новый пост";
}
<script src="~/lib/ckeditor/ckeditor.js"></script>


<div>
    <form asp-area="Admin" asp-controller="Home" asp-action="Update" method="post">
        <div class="row">
            <div class="m-5">
                <label>Заголовок</label>
                <input class="form-control w-100" type="text" name="Title" />
            </div>
        </div>
        <textarea name="Description" id="editor"></textarea>
        <div class="row justify-content-center mt-5">
            <input class="btn btn-warning" type="submit" value="Сохранить" />
            <input class="btn btn-secondary" type="button" value="Отмена" />
        </div>
    </form>
</div>

<script>
    ClassicEditor
        .create( document.querySelector( '#editor' ) )
        .catch( error => {
            console.error( error );
        } );
</script>