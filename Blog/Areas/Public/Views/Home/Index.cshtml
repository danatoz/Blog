@model Blog.Areas.Admin.VIewModel.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="col-md-12 page-body">
    <div class="row">


        <div class="sub-title">
            <h2>My Blog</h2>
            <a asp-action="Contact" asp-area="Public"><i class="icon-envelope"></i></a>
            <a asp-action="Register" asp-controller="Account" asp-area="Admin"><i class="icon-envelope"></i></a>
            <a asp-action="Login" asp-controller="Account" asp-area="Admin"><i class="icon-envelope"></i></a>
        </div>


        <div class="col-md-12 content-page">


            <!-- Blog Post Start -->
            @foreach (var post in Model.Posts)
            {
                <div class="col-md-12 blog-post">
                    <div class="post-title">
                        <a href="single.html"><h1>@post.Title</h1></a>
                    </div>
                    <div class="post-info">
                        <span>@post.PublicateDate.Value.ToString("D") / by <a href="#" target="_blank">Alex Parker</a></span>
                    </div>
                    <p>
                        @Html.Raw(post.Description)
                    </p>
                    <a asp-action="Single" asp-area="Public" asp-route-id="@post.Id" class="button button-style button-anim fa fa-long-arrow-right"><span>Read More</span></a>
                </div>
            }
